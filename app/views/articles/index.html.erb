<div class="container">
  <h1>My articles 📝</h1>

  <ul class="list-group mt-5">
    <% @articles.each do |article| %>
    <li class="list-group-item ><%= link_to article.title, article_path(article.id)%>
      (<%= link_to "Delete",
      article_path(article.id),
      method: :delete,
      data: {confirm: "Are you sure you want to delete this article?"} %>)
    </li>
    <% end %>
  </ul>

  <div class="btn btn-dark mt-3"><%= link_to "+ Submit a new article", new_article_path %></div>
</div>
